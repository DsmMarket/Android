<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.dsm.dsmmarketandroid.presentation.ui.signUp.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.signUp.SignUpActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_sign_up"
            style="@style/ToolBarStyle.Event"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back_black"
            app:title="@string/sign_up"
            app:titleTextColor="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/bg_gradient_primary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_sign_up" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/description_logo"
            android:src="@drawable/logo"
            android:transitionName="logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_sign_up" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/bg_white_rounded"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo">

            <com.dsm.dsmmarketandroid.custom.MeasuredViewPager
                android:id="@+id/vp_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintLeft_toLeftOf="@id/cl_parent"
                app:layout_constraintRight_toRightOf="@id/cl_parent"
                app:layout_constraintTop_toTopOf="@id/cl_parent" />

            <com.pm10.library.CircleIndicator
                android:id="@+id/ci_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@id/vp_sign_up"
                app:layout_constraintRight_toRightOf="@id/vp_sign_up"
                app:layout_constraintTop_toBottomOf="@id/vp_sign_up"
                app:p_defaultColor="@color/white"
                app:p_gap="18dp"
                app:p_radius="4dp"
                app:p_selectedColor="@color/colorPrimary"
                app:p_strokeColor="@color/colorPrimary"
                app:p_strokeWidth="2dp" />

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/cl_parent"
                app:layout_constraintRight_toRightOf="@id/cl_parent"
                app:layout_constraintTop_toBottomOf="@id/ci_sign_up"
                android:background="@{viewModel.isSignUpBtnEnable ? @drawable/bg_btn_primary_rounded : @drawable/bg_btn_grey_rounded}"
                android:clickable="@{viewModel.isSignUpBtnEnable}"
                android:onClick="@{() -> viewModel.signUp()}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>